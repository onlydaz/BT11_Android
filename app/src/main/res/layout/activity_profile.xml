<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Nút quay lại -->
    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="Back"
        android:src="@drawable/ic_back"
        android:padding="8dp" />

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Thông tin cá nhân"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Avatar -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewAvatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_avatar_placeholder"
        android:clickable="true"
        android:focusable="true" />

    <!-- Tên người dùng -->
    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username: "
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="left" />

    <!-- Email -->
    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="left" />

    <!-- Số lượng video -->
    <TextView
        android:id="@+id/textViewVideoCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số video: 0"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="left" />

    <!-- Tiêu đề video -->
    <EditText
        android:id="@+id/editTextVideoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tiêu đề video"
        android:inputType="text"
        android:layout_marginBottom="12dp" />

    <!-- Mô tả video -->
    <EditText
        android:id="@+id/editTextVideoDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả video"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:layout_marginBottom="12dp" />

    <!-- Hai nút nằm ngang -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:weightSum="2"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/buttonSelectVideo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="Chọn video"
            android:backgroundTint="#0099FF"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonUploadVideo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="Upload video"
            android:backgroundTint="#0099FF"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>


    <!-- Nút đăng xuất -->
    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#FF4C4C"
        android:padding="12dp"
        android:text="Đăng xuất"
        android:textColor="#FFFFFF" />

</LinearLayout>